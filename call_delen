#include <pic32mx.h>
#include <stdint.h>
#include <stdlib.h>

char values()
{
	T2CON = 0x70;
	PR2 = (80000000 / 256) / 10;
	TMR2 = 0;
	T2CONSET = 0x8000;

	int timecounter = 0;

	if(IFS(0) & 0x100)
		{
			timecounter++;
			IFS(0) = 0;
		}

	char i;
	char value[3] = {'1', '2', '3'};
	for(i = 0; i < 3; i++)
		{
			if(timecounter == 5)
				{
					timecounter = 0;
					return	display_string(1, value[i]);
				}
		}
}

void interface(void)
{
	display_init();
	display_string(0, "food");
//	display_string(1, "weight 2g");
	display_string(2, "age 8");
	display_string(3, "points 12");
	display_update();

	while(1)
	{volatile int* switches = (volatile int*) getsw();
		if(!(*switches & 0x1))
			{
				display_string(0, "");
				display_string(1, "");
				display_string(2, "");
				display_string(3, "");
				main();
			}
 	}

	tama();
		for(;;) ;
		return;
}
